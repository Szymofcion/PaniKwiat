---
import Layout from '../layouts/Layout.astro';
import Header from '../components/Header.astro';
import Hero from '../components/Hero.astro';
import Main from '../components/Main.astro';
import Cta from '../components/Cta.astro';
import About from '../components/About.astro';
import Opinion from '../components/Opinion.astro';
import Footer from '../components/Footer.astro';



---

<Layout title="Welcome to Astro.">
	<Header />
	<Hero />
	<main>
		<Main />

	</main>
	<Cta />
	<About />
	<Opinion />
	<Footer />

</Layout>

<style lang="scss" is:global>

body, html {
	background-color: white;
	font-family: 'Noto Serif', serif;
	--primary: #6D8E4D;
	--primary-dark: #80A859;
}

body {
	overflow-x: hidden;
}

h1 {
	font-weight: 600;
	line-height: normal;
	letter-spacing: 0.02em;
	font-size: 30px;
	padding-left: 10px;
	border-left: 3px solid rgb(176, 204, 130, .2);

	br {
		display: none;

		@media screen and (min-width:768px) {
			display: block;
		}
	}

	@media screen and (min-width:1200px) {
		font-size: 50px;
		padding-left: 30px;

	
	}

	span {
		background: linear-gradient(131deg, #98B16D -0.76%, #6D8E4D 104.31%);
		margin-left: 10px;
	}
}

h2 {
	font-weight: 600;
	line-height: normal;
	letter-spacing: 0.02em;
	font-size: 26px;
	margin-bottom: 30px;
	display: flex;
	align-items: center;
	flex-direction: column;
	flex-wrap: wrap;

	@media screen and (min-width:768px) {
		flex-direction: row;
	}

	&::before {
		content: url("../../public/h2.svg");
		display: flex;
		align-items: flex-end;
		margin-right: 20px;
	}

	@media screen and (min-width:1200px) {
		font-size: 40px;
		margin-bottom: 60px;
		br {
			display: block;
		}
	}

	br {
		display: none;
	}

	span {
		color:white;
		background: linear-gradient(131deg, #98B16D -0.76%, #6D8E4D 104.31%);
		margin-left: 5px;
		padding: 10px;
	}
}

h3 {
	font-size: 18px;
	font-weight: 600;
	line-height: normal;
	letter-spacing: 0.02em;
	margin-bottom: 10px;
	text-transform: uppercase;

	@media screen and (min-width:1200px) {
		font-size: 26px;
		margin-bottom: 20px;
	}

	br {
		display: none;
		@media screen and (min-width:768px) {
			display: block;
		}
	}
}
 
h4 {
text-transform: uppercase;
font-size: 16px;
line-height: 31px;
letter-spacing: 0.02em;
margin-bottom: 20px;
	@media screen and (min-width:1200px) {
		font-size: 20px;
	}
}

p {
	font-size: 14px;
	line-height: 20px;
	letter-spacing: 0;
	margin-bottom: 10px;
	font-weight: 400;
	@media screen and (min-width:1200px) {
		font-size: 16px;
		line-height: 30px;
		margin-bottom: 30px;
	}

}

.btn {
	text-transform: uppercase;
	font-size: 14px;
	padding:15px 5px;
	font-weight: 700;
	letter-spacing: 0.04em;
	line-height: normal;
	display: inline-block;
	cursor: pointer;
	transition: .3s ease-in-out all;

	@media screen and (min-width:768px) {
		font-size: 16px;
		padding:15px 40px;
	}
}

.btn-primary {
	color: white;
	background-color: var(--primary);
	border: 1px solid var(--primary);

	&:hover {
		background-color: var(--primary-dark);
		border: 1px solid var(--primary-dark);
	}
}

.btn-white-outline {
	border: 1px solid white;
	background-color: transparent;
	color:white;

	&:hover {
		box-shadow: 0 0 0 1px white, 0 0 0 1px white;
	}
}

.btn-black-outline {
	border: 1px solid #151515;
	background-color: transparent;
	color:#151515;

	&:hover {
		box-shadow: 0 0 0 1px #151515, 0 0 0 1px #151515;
	}
}

section {
	padding: 40px 0;
	@media screen and (min-width:1200px) {
		padding: 80px 0;
	}
}

.container {
    width: 100%;
    margin-right: auto;
    margin-left: auto;
    padding-right: 2rem;
    padding-left: 2rem
}

@media (min-width: 540px) {
    .container {
        max-width:540px
    }
}

@media (min-width: 768px) {
    .container {
        max-width:768px
    }
}

@media (min-width: 1024px) {
    .container {
        max-width:1024px
    }
}

@media (min-width: 1280px) {
    .container {
        max-width:1280px
    }
}

@media (min-width: 1536px) {
    .container {
        max-width:1536px
    }
}


main {
    background-color: #F6F6F6;
}


</style>
